(common) {
        tls {
                dns porkbun {
                        api_key {env.PORKBUN_API_KEY}
                        api_secret_key {env.PORKBUN_API_SECRET}
                }
        }
}

ag.example.com {
        import common
        reverse_proxy http://adguard.tailnet.ts.net:80
        # Or use the Tailscale IP: http://100.96.175.20:80
        # Adjust port to match your AdGuard Home web UI port (usually 80 or 3000)
}

pve1.example.com {
        import common
        reverse_proxy https://pve1.tailnet.ts.net:8006 {
                transport http {
                        tls_insecure_skip_verify
                }
        }
}

